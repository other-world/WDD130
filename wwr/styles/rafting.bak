@import url('https://fonts.googleapis.com/css2?family=Oswald&family=Noto+Serif&display=swap');
:root {
    --primary-color: #000000;
    --secondary-color: #e5e5e5;
    --accent1-color: #0af4f4;
    --accent2-color: #fc7311;
    --heading-font: 'Oswald', serif;
    --paragraph-font: 'Noto Serif', serif;
    
    --nav-background-color: var(--accent2-color);
    --nav-link-color: #0d1c92;
    --nav-hover-link-color: #292928;
    --nav-hover-background-color: var(--accent2-color);
}
body {
	max-width: 960px;
	/* margin: 2rem auto; */
	/* font-family: var(--paragraph-font); */
    padding: 20px;
    border: 1px solid #000;
}
h1, h2, h3, h4, h5, h6 {
    font-family: var(--heading-font);
    color: var(--primary-color);
}
header {
    padding: 20px;
    background-color: white;
}
header img {
    width: 150px;
}
p {
    padding: 0px;
    margin: 1rem;
    color: var(--primary-color);
    font-family: var(--paragraph-font);
}
/* .......................................................... */
.sociallinks {
    text-decoration: none; 
}

.sociallinks img {
    width: 50px;
    box-shadow: 0px;
    margin: -10px;

}

.hero{
    position: relative;
    width: 100%;
}
.hero h1 {
    top: 0px;
	left: 0px;
    width: 96%;
	background: black;
    color: var(--secondary-color);
    position: absolute;
    border: 1px solid #000;
	padding: 1rem;
	box-shadow: 0 0 30px #111;
	opacity: 0.7;
}
.hero img {
    display: block;
    width: 100%; 
    margin: 0px;
    height: auto;
    object-fit: cover;
}
.hero p {
    color: var(--secondary-color);
}
article {
    position: absolute;
    top: 100px;
    left: 50px;
    width:80%;
    background: black;
    position: absolute;
    border: 1px solid #000;
margin: 15px;
	opacity: 0.9;
}
.hero article img {
    float: right;
    width: 150px;
    height: auto;
    padding: 2px;
    box-shadow: 0 0 30px black;
    margin: 10px 10px 10px 10px;
}

img {
    width: 600px;
    height: auto;
    box-shadow: 0 0 30px gray;
    margin: 10px;
}

nav {    font-size: 1.2rem;
    display: flex;
    width=100%;
}
nav a {
    color: var(--nav-link-color);
    text-decoration: none;
    padding: 1rem;
}
nav a:link, nav a:visited {
    color: var(--nav-link-color);
}

nav a:hover {
    color: var(--nav-hover-background-color);
}